{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "pale:creaking",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"mc:creaking_heart": {
				"minecraft:damage_sensor": {
					"triggers": {
						"cause": "all",
						"deals_damage": false
					}
				}
			},
			"mc:awaken":{
				"minecraft:behavior.look_at_player": {
					"priority": 4,
					"look_distance": 6,
					"probability": 0.02
				},
				"minecraft:movement": {
					"value": 0.35
				}
			},
			"mc:petrify":{
				"minecraft:movement": {
					"value": 0.0
				}
			}
		},
		"components": {
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [ "creaking", "monster", "mob" ]
			},
			"minecraft:collision_box": {
				"width": 0.9,
				"height": 2.4
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 5 + (q.equipment_count * Math.Random(1,3)) : 0"
			},
			"minecraft:health": {
				"value": 40,
				"max": 40
			},
			"minecraft:timer": {
				"time": 1,
				"looping": true,
				"time_down_event": {
					"event": "mc:creaking_update_attack",
					"target": "self"
				}
			},
			"minecraft:nameable": {},
			"minecraft:lookat": {
				"search_radius": 30.0,
				"set_target": false,
				"look_event": {
					"event":"freeze",
					"target": "self"
				},
				"look_cooldown": 0.0,
				"filters": {
					"all_of": [
						{"subject": "other","test": "is_family","value": "player"}
					]
				}
			},
			"minecraft:movement.basic": {},
			"minecraft:navigation.walk": {
				"is_amphibious": true,
				"can_pass_doors": true,
				"can_walk": true,
				"can_break_doors": true
			},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:attack": {
				"damage": 5
			},
			"minecraft:behavior.melee_box_attack": {
				"priority": 2
			},
			"minecraft:behavior.random_stroll": {
				"priority": 3,
				"speed_multiplier": 1
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 0
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 1,
				"must_see": true,
				"reselect_targets": true,
				"within_radius": 25.0,
				"must_see_forget_duration": 17.0,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{ "test": "is_family", "subject": "other", "value": "player" }
							]
						},
						"max_dist": 35
					}
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0,
				"breathes_air": true,
				"breathes_water": true
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {}
		},
		"events": {
			"minecraft:entity_spawned":{"add":{"component_groups":["mc:awaken"]}},
			"mc:spawn_creaking_heart":{"add":{"component_groups":["mc:creaking_heart"]}},
			"mc:creaking_update_attack": {},
			"mc:petrify":{"remove":{"component_groups":["mc:awaken"]},"add":{"component_groups":["mc:petrify"]}},
			"mc:awaken":{"remove":{"component_groups":["mc:petrify"]},"add":{"component_groups":["mc:awaken"]}}
		}
	}
}